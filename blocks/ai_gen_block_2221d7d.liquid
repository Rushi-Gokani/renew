{% doc %}
  @prompt
    Create a Shopify section called "Product Highlights â€” Centered Layout" with a soft pastel green background; three-column layout (left features, centered product image, right features); center column shows merchant-uploaded product image (cylindrical mockup) with subtle shadow; left column: three editable feature blocks (heading and description) stacked vertically; right column: three editable feature blocks (heading and description) stacked vertically; typography: bold dark-green headings and smaller muted-green/gray descriptions; below the columns place two rounded dark-green buttons with white text ("Nutritional Information" and "Ingredients") that are editable and linkable; spacing should be even, centered alignment, and responsive for mobile (stack into single column); theme editor controls: editable background color, each feature heading & description, product image, button text & links, and padding; styling: minimalist, modern, organic/wellness aesthetic; ensure accessibility (semantic HTML, keyboard-focus styles, alt text for image) and mobile-friendly touch targets.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-highlights-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 20px;
  }

  .ai-product-highlights-container-{{ ai_gen_id }} {
    max-width: 1440px;
    margin: 0 auto;
  }

  .ai-product-highlights-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
    align-items: center;
    margin-bottom: 40px;
  }

  .ai-product-highlights-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .ai-product-highlights-image-column-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-product-highlights-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    max-width: 100%;
  }

  .ai-product-highlights-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    max-width: 300px;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-product-highlights-placeholder-{{ ai_gen_id }} {
    max-width: 300px;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    background-color: #f4f4f4;
  }

  .ai-product-highlights-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 300px;
    border-radius: 12px;
  }

  .ai-product-highlights-feature-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-product-highlights-feature-heading-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .ai-product-highlights-feature-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-product-highlights-buttons-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .ai-product-highlights-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    min-height: 48px;
    min-width: 120px;
  }

  .ai-product-highlights-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  .ai-product-highlights-button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_color }};
    outline-offset: 2px;
  }

  @media screen and (max-width: 768px) {
    .ai-product-highlights-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }

    .ai-product-highlights-column-{{ ai_gen_id }} {
      gap: 20px;
    }

    .ai-product-highlights-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-product-highlights-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 280px;
    }
  }
{% endstyle %}

<div class="ai-product-highlights-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-highlights-container-{{ ai_gen_id }}">
    <div class="ai-product-highlights-grid-{{ ai_gen_id }}">
      <div class="ai-product-highlights-column-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% liquid
            assign heading_key = 'left_feature_' | append: i | append: '_heading'
            assign description_key = 'left_feature_' | append: i | append: '_description'
            assign heading = block.settings[heading_key]
            assign description = block.settings[description_key]
          %}
          <div class="ai-product-highlights-feature-{{ ai_gen_id }}">
            {% if heading != blank %}
              <h3 class="ai-product-highlights-feature-heading-{{ ai_gen_id }}">{{ heading }}</h3>
            {% endif %}
            {% if description != blank %}
              <p class="ai-product-highlights-feature-description-{{ ai_gen_id }}">{{ description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="ai-product-highlights-image-column-{{ ai_gen_id }}">
        <div class="ai-product-highlights-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.product_image %}
            <img
              src="{{ block.settings.product_image | image_url: width: 600 }}"
              alt="{{ block.settings.product_image.alt | escape }}"
              class="ai-product-highlights-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.product_image.width }}"
              height="{{ block.settings.product_image.height }}"
            >
          {% else %}
            <div class="ai-product-highlights-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-product-highlights-column-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% liquid
            assign heading_key = 'right_feature_' | append: i | append: '_heading'
            assign description_key = 'right_feature_' | append: i | append: '_description'
            assign heading = block.settings[heading_key]
            assign description = block.settings[description_key]
          %}
          <div class="ai-product-highlights-feature-{{ ai_gen_id }}">
            {% if heading != blank %}
              <h3 class="ai-product-highlights-feature-heading-{{ ai_gen_id }}">{{ heading }}</h3>
            {% endif %}
            {% if description != blank %}
              <p class="ai-product-highlights-feature-description-{{ ai_gen_id }}">{{ description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="ai-product-highlights-buttons-{{ ai_gen_id }}">
      {% if block.settings.button_1_text != blank %}
        <a
          href="{{ block.settings.button_1_link }}"
          class="ai-product-highlights-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_1_text }}
        </a>
      {% endif %}
      {% if block.settings.button_2_text != blank %}
        <a
          href="{{ block.settings.button_2_link }}"
          class="ai-product-highlights-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_2_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

