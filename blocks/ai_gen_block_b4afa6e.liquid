{% doc %}
  @prompt
    Create a Shopify section "Benefits Icons Row" with editable heading (default "The Rheal Deal") and subtitle ("The best superfoods to support your health & wellness!"), five customizable icon cards (icon upload, title, subtitle, link, show/hide), default items: 1) Certified Organic / with OF&G, 2) Always Plant-Based / vegan friendly, 3) Gluten Free / Coeliac friendly, 4) Nothing Artificial / only the good stuff, 5) Science-backed / clinically studied ingredients; global settings for background, text, icon circle color, typography, columns desktop/tablet/mobile, spacing, padding, and optional animations; responsive, mobile-friendly, drag-to-reorder in customizer, schema-based for Online Store 2.0.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-benefits-icons-row-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-benefits-icons-row__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-benefits-icons-row__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.text_spacing }}px;
  }

  .ai-benefits-icons-row__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;

  }

  .ai-benefits-icons-row__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-benefits-icons-row__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_spacing }}px;
    margin-top: {{ block.settings.text_spacing }}px;
  }

  .ai-benefits-icons-row__card-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.card_padding }}px;
    {% if block.settings.enable_animations %}
      transition: transform 0.3s ease;
    {% endif %}
  }

  {% if block.settings.enable_animations %}
    .ai-benefits-icons-row__card-{{ ai_gen_id }}:hover {
      transform: translateY(-5px);
    }
  {% endif %}

  .ai-benefits-icons-row__icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    {% if block.settings.enable_animations %}
      transition: background-color 0.3s ease;
    {% endif %}
  }

  .ai-benefits-icons-row__card-{{ ai_gen_id }}:hover .ai-benefits-icons-row__icon-wrapper-{{ ai_gen_id }} {
    background-color: {{ block.settings.icon_hover_color }};
  }

  .ai-benefits-icons-row__icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
    object-fit: contain;
  }

  .ai-benefits-icons-row__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    color: {{ block.settings.text_color }};
    opacity: 0.5;
  }

  .ai-benefits-icons-row__card-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-benefits-icons-row__card-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.card_subtitle_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  .ai-benefits-icons-row__card-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  @media screen and (max-width: 990px) {
    .ai-benefits-icons-row__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-benefits-icons-row__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-benefits-icons-row__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-benefits-icons-row__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-benefits-icons-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-benefits-icons-row__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-benefits-icons-row__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h3 class="ai-benefits-icons-row__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-benefits-icons-row__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-benefits-icons-row__grid-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign show_key = 'show_item_' | append: i
          assign icon_key = 'icon_' | append: i
          assign title_key = 'title_' | append: i
          assign subtitle_key = 'subtitle_' | append: i
          assign link_key = 'link_' | append: i

          assign show_item = block.settings[show_key]
          assign icon = block.settings[icon_key]
          assign title = block.settings[title_key]
          assign subtitle = block.settings[subtitle_key]
          assign link = block.settings[link_key]
        %}

        {% if show_item %}
          <div class="ai-benefits-icons-row__card-{{ ai_gen_id }}">
            {% if link != blank %}
              <a href="{{ link }}" class="ai-benefits-icons-row__card-link-{{ ai_gen_id }}">
            {% endif %}

            <div class="ai-benefits-icons-row__icon-wrapper-{{ ai_gen_id }}">
              {% if icon != blank %}
                <img
                  src="{{ icon | image_url: width: 100 }}"
                  alt="{{ title | escape }}"
                  class="ai-benefits-icons-row__icon-{{ ai_gen_id }}"
                  loading="lazy"
                  width="100"
                  height="100"
                >
              {% else %}
                <div class="ai-benefits-icons-row__icon-placeholder-{{ ai_gen_id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M8 12l2 2 4-4"></path>
                  </svg>
                </div>
              {% endif %}
            </div>

            {% if title != blank %}
              <h3 class="ai-benefits-icons-row__card-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}

            {% if subtitle != blank %}
              <p class="ai-benefits-icons-row__card-subtitle-{{ ai_gen_id }}">{{ subtitle }}</p>
            {% endif %}

            {% if link != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

