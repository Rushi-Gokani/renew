  "name": "Newsletter signup",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "heading_text",
      "label": "Heading text",
      "default": "<h2>Keep in touch</h2>"
    },
    {
      "type": "textarea",
      "id": "description_text",
      "label": "Description text",
      "default": "Subscribe to our newsletter and be the first to know about new products, exclusive offers, and updates."
