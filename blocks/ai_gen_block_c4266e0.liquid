      "label": "Email placeholder",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SIGN UP"
    },
    {
      "type": "url",
      "id": "privacy_policy_link",
      "label": "Privacy policy link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_gradient_start",
      "label": "Button gradient start",
      "default": "#10b981"
    },
    {
      "type": "color",
      "id": "button_gradient_end",
      "label": "Button gradient end",
      "default": "#059669"
    }
  ],
  "presets": [
    {
      "name": "Newsletter signup"
    }
  ],
  "tag": null
}
{% endschema %}